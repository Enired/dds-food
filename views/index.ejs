<!-- Banner Area Start-->
<section id="banner" class="mt-4 pb-4">
    <div class="container-lg">
        <div class="row g-4 pt-5 justify-content-center align-items-center">
            <div class="banner-inner col-md-5 text-center text-md-start">
                <h3>Japanese Test</h3>
                <h1>Different spice for a Different taste</h1>
                <p class="lead my-4 text-muted">You need not only Just Food Stalls with Persons but also specialized
                    equipment start the Fast
                    Food</p>
                <a href="#pricing" class="btn btn-warning btn-lg">GET IT NOW</a>
                <!-- open sidebar / offcanvas -->
            </div>
            <div class="col-md-5 text-center d-none d-md-block">
                <img src="/assets/image/home-2/banner/1.png" class="img-fluid" alt=banner>
            </div>
        </div>
    </div>
</section>
<!-- Banner Area End -->

<!--product Area Start-->
<section id="product-area" class="product-area pt-4">
    <div class="container">
        <!--  product header       -->
        <div class="row justify-content-center">
            <div class="col-12 product-area-top-wrapper">
                <div class="section-title text-center">
                    <h3 class="sub-title">Our signature</h3>
                    <h2 class="title">Delicious Deals for Delicious Meals</h2>
                </div>
                <ul class="product-nav style-2 nav nav-pills" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-allItems-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-allItems"
                                type="button" role="tab" aria-controls="pills-allItems" aria-selected="true"><img
                                    src="/assets/image/category/1.png" alt="img">ALL ITEMS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-appetizer-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-appetizer"
                                type="button" role="tab" aria-controls="pills-appetizer" aria-selected="false"><img
                                    src="/assets/image/category/2.png" alt="img">APPETIZERS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-main-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-main"
                                type="button" role="tab" aria-controls="pills-main" aria-selected="false"><img
                                    src="/assets/image/category/3.png" alt="img">MAINS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-dessert-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-dessert"
                                type="button" role="tab" aria-controls="pills-dessert" aria-selected="false">
                            <img
                                    src="/assets/image/category/4.png" alt="img">DESSERTS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-drink-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-drink"
                                type="button" role="tab" aria-controls="pills-drink" aria-selected="false">
                            <img
                                    src="/assets/image/category/5.png" alt="img">DRINKS
                        </button>
                    </li>
                    <!-- <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-drinks-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-drinks"
                                type="button" role="tab" aria-controls="pills-drinks" aria-selected="false"><img
                                    src="/assets/image/category/6.png" alt="img">Soft drinks
                        </button>
                    </li> -->
                </ul>
            </div>
        </div>

        <!-- menu creation -->
        <% for (const [category, items] of Object.entries(menu)) { %>
          <div class="tab-content mt-5" id="pills-tabContent">
            <div class="tab-pane fade show <%=category === 'allItems' ? 'active' : ''%>" id="pills-<%=category%>" role="tabpanel" aria-labelledby="pills-<%=category%>-tab">
                <div class="row justify-content-center">
                  <% for (const item of items) { %>
                      <div class="col-xl-3 col-lg-4 col-md-6 mb-3">
                          <div class="single-item-wrap">
                              <div class="thumb ps-1">
                                  <img class="img-fluid img-thumbnail" src=<%=item.image_url%> alt="img">
                              </div>
                              <br>
                              <div class="wrap-details">
                                  <h4><%=item.name%></h4>
                                  <h6 class="price">$<%=(item.price/100).toFixed(2)%></h6>
                                  <p class="text-center text-muted"><%=item.description%></p>
                                  <div class="details-bottom p-3">
                                      <form action="">
                                          <div>
                                            <input type="number" min='0' class="form-control" id="input1" placeholder="Quantity">
                                          </div>
                                          <div style="width: 150px; height: 3px;">
                                            <button class="btn btn-warning" value=<%=item.id%>>Add
                                              <i class="fa-solid fa-cart-plus"></i>
                                            </button>
                                          </div>
                                      </form>
                                  </div>
                              </div>
                          </div>
                      </div>
                    <% } %>
                  </div>
              </div>
            </div>
        <% } %>

</section>
<!-- product Area End -->

